<div>
  <% book.book_comments.each do |book_comment| %>
    <p>
      <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
      <%= book_comment.comment %>
      <% if user_signed_in? && book_comment.user_id == current_user.id %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %><br>
      <% end %>
    </p>
    <%= book_comment.user.name %>
  <% end %>
</div>
<div class=" form-group">
  <%= form_with(model:[book, book_comment], local: false) do |f| %>
    <%= f.text_area :comment, class:"form-control" %><br>
    <%= f.submit "送信する" %>
  <% end %>
</div>